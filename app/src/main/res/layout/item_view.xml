<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginVertical="30px"
    android:background="@drawable/rounded_view"
    android:id="@+id/item_view"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/current_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:text="Happy" />

    <TextView
        android:id="@+id/current_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_mood"
        android:textColor="#393939"
        tools:text="9/10" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_people"
        android:layout_below="@id/current_rate"
        android:textSize="12dp"
        android:textColor="#393939"
        tools:text="Dad, Omar "/>

    <TextView
        android:id="@+id/current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_people"
        android:layout_marginTop="0dp"
        android:gravity="end"
        android:textColor="#858484"
        android:textSize="12dp"
        tools:text="Jan 21 2020 " />

</RelativeLayout>